{
  "git": {
    "commitMessage": "release: v${version}"
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true,
    "publishConfig": {
      "registry": "https://npm.pkg.github.com"
    }
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "eslint"
      },
      "infile": "CHANGELOG.md"
    }
  }
}
